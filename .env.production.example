# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database Configuration (use production database URL)
DATABASE_URL=postgresql://username:password@host:5432/gemverse?schema=public

# Authentication Secrets (MUST be different from development)
# Generate with: openssl rand -base64 32
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=REPLACE_WITH_STRONG_SECRET_32_CHARS_OR_MORE
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_32_CHARS_OR_MORE

# Optional: Owner IP Whitelist (recommended for production)
OWNER_IP_WHITELIST=your.ip.address.here

# Node Environment
NODE_ENV=production

# Docker Compose Variables (if using docker-compose.prod.yml)
DB_USER=postgres
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DB_NAME=gemverse
